FROM ubuntu
ARG KEYBASE_ALLOW_ROOT=1
ENV KEYBASE_ALLOW_ROOT=$KEYBASE_ALLOW_ROOT
ARG KEYBASE_USERNAME=default
ARG KEYBASE_PAPERKEY=default
ARG KB_TYPE=default
ARG KB_TEAM=default
ARG KB_USER=default
ARG KB_CHANNEL=default
ARG FLASK_ENV=default
ARG AUTH_TOKEN=default
ENV KEYBASE_USERNAME=$KEYBASE_USERNAME
ENV KEYBASE_PAPERKEY=$KEYBASE_PAPERKEY
ENV KB_TYPE=$KB_TYPE
ENV KB_TEAM=$KB_TEAM
ENV KB_USER=$KB_USER
ENV KB_CHANNEL=$KB_CHANNEL
ENV FLASK_ENV=$FLASK_ENV
ENV AUTH_TOKEN=$AUTH_TOKEN
RUN printenv